@using System.Globalization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<GeekShopping.WEB.Models.ProductModel>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Category
            </td>
            <td>
                Price
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var @item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    @item.Price.ToString("c")
                </td>
                <td>
                    <a asp-action="ProductUpdate" cite="btn btn-success" asp-route-id="@item.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                @if(User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("ProductDelete", "ProductDelete", new { id = item.Id })
                        <a asp-action="ProductDelete" cite="btn btn-danger" asp-route-id="@item.Id">
                        
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>